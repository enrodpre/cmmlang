{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "dev build",
      "description": "Debug build with optimization disabled",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_CXX_EXTENSIONS ": "ON",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_MODULE_PATH": "${sourceDir}/cmake"
      },
      "environment": {
        "WARNING_LEVEL": "SOME"
      }
    },
    {
      "name": "dev-asan",
      "displayName": "dev build with sanitizers",
      "description": "Debug build with optimization disabled and address sanitizers",
      "inherits": "dev"
    },
    {
      "name": "test",
      "displayName": "dev with tests",
      "description": "Debug build with unit and integration tests enabled",
      "inherits": "dev",
      "binaryDir": "${sourceDir}/build/test",
      "cacheVariables": {
        "BUILD_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "build for developing",
      "configurePreset": "dev",
      "jobs": 12
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "displayName": "Run Unit Tests",
      "description": "Run only unit tests",
      "configurePreset": "test",
      "filter": {
        "include": {
          "label": "unit"
        }
      },
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "integration-tests",
      "displayName": "Run Integration Tests",
      "description": "Run integration/end-to-end tests with the built binary",
      "configurePreset": "test",
      "filter": {
        "include": {
          "label": "e2e"
        }
      },
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "all-tests",
      "displayName": "Run All Tests",
      "description": "Run both unit and integration tests",
      "inherits": [
        "test",
        "integration-tests"
      ],
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
