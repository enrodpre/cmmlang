{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Debug config",
      "description": "Debug config with optimization disabled",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS ": "ON",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
        "ENABLE_IWYU": "OFF",
        "IWYU_AUTOFIX": "OFF",
        "LOG_LEVEL": "5",
        "BUILD_TESTING": "ON",
        "BUILD_INTEGRATION": "ON",
        "ENABLE_TEST_COVERAGE": "OFF"
      },
      "environment": {
        "WARNING_LEVEL": "SOME"
      }
    },
    {
      "name": "dev-asan",
      "displayName": "Debug config with sanitizers",
      "description": "Debug config with optimization disabled and address sanitizers",
      "inherits": [
        "dev"
      ]
    },
    {
      "name": "dev-test",
      "displayName": "Debug config with tests",
      "description": "Debug config with unit and integration tests enabled",
      "inherits": [
        "dev-asan"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "build for developing",
      "configurePreset": "dev-test",
      "jobs": 12
    },
    {
      "name": "dev-test",
      "configurePreset": "dev-test",
      "displayName": "Build Test",
      "description": "Configure/build test preset, and build targets in test/ if present.",
      "environment": {
        "USE_ASAN": "ON"
      },
      "jobs": 12
    }
  ],
  "testPresets": [
    {
      "name": "unit",
      "displayName": "Run Unit Tests",
      "description": "Run only unit tests",
      "configurePreset": "dev-test",
      "filter": {
        "include": {
          "label": "unit"
        }
      },
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "environment": {
        "CTEST_OUTPUT_ON_FAILURE": "ON",
        "CTEST_PROGRESS_OUTPUT": "SOME"
      }
    },
    {
      "name": "integration",
      "displayName": "Run Integration Tests",
      "description": "Run integration/end-to-end tests with the built binary",
      "configurePreset": "dev-test",
      "filter": {
        "include": {
          "label": "integration"
        }
      },
      "output": {
        "shortProgress": true,
        "outputOnFailure": false
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
